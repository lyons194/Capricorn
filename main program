while 1:
	a = input("Please enter your password: ")
	if a != "opportunity":
		a = input("Please enter your password: ")
		b = 0
		while b < 2:
			a = input("Please enter your password: ")
			b = b + 1
			if b == 2:
				pquery1 = input("Do you need to reset your password? ")
				while pquery1 == "yes":
				      pquery2 = input("Please enter your new password: ")
				      pquery3 = input("Please re-enter your new password: ")
				      if pquery3 == pquery2:
					      a = input("Please enter your password: ")
					      if a == pquery3:
						      break
					      if a != pquery3:
						      print("oh man")
				      if pquery3 != pquery2:
					      pquery3 = input("Please re-enter your new password: ")
					      if pquery3 == pquery2:
						      break
				if pquery1 == "no":
				      print("OK!")
				      break
	if a == "opportunity":
		break
	if a == pquery3:
		break
