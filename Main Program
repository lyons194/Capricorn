while 1:
	def spacer():
		print("\n"*5)
	spacer();
	a = input("Please enter your password: ")
	spacer();
	if a != "opportunity":
		spacer()
		a = input("Please enter your password: ")
		spacer()
		b = 0
		while b < 2:
			spacer()
			a = input("Please enter your password: ")
			spacer()
			b = b + 1
			if b == 2:
				spacer()
				pquery1 = input("Do you need to reset your password? ")
				spacer()
				while pquery1 == "yes":
				      pquery2 = input("Please enter your new password: ")
				      pquery3 = input("Please re-enter your new password: ")
				      if pquery3 == pquery2:
					      a = input("Please enter your password: ")
					      if a == pquery3:
						      break
					      if a != pquery3:
						      print("Passwords do not match.  Please reset your password.")
				      if pquery3 != pquery2:
					      pquery3 = input("Please re-enter your new password: ")
					      if pquery3 == pquery2:
						      break
				while pquery1 == "Yes":
				      pquery2 = input("Please enter your new password: ")
				      pquery3 = input("Please re-enter your new password: ")
				      if pquery3 == pquery2:
					      a = input("Please enter your password: ")
					      if a == pquery3:
						      break
					      if a != pquery3:
						      print("Passwords do not match.  Please reset your password.")
				      if pquery3 != pquery2:
					      pquery3 = input("Please re-enter your new password: ")
					      if pquery3 == pquery2:
						      break
				while pquery1 == "ya":
				      pquery2 = input("Please enter your new password: ")
				      pquery3 = input("Please re-enter your new password: ")
